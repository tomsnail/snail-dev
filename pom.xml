<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>cn.tomsnail</groupId>
	<artifactId>dev-component</artifactId>
	<version>0.0.5-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>dev-component</name>
	<url>http://maven.apache.org</url>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-sources</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<includes>
						<include>**/*.class</include>
						<include>dev-*.properties</include>
						<include>META-INF/**/*</include>
					</includes>
					<excludes>
						<exclude>*.xml</exclude>
						<exclude>zookeeper.properties</exclude>
						<exclude>config.properties</exclude>
					</excludes>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.9.1</version>
				<configuration>
					<encoding>UTF-8</encoding>
					<failOnError>false</failOnError>
					<aggregate>true</aggregate>
					<destDir>myapi</destDir>
					<tags>
						<tag>
							<name>methodauthor</name>
							<placement>a</placement>
							<head>作者</head>
						</tag>
						<tag>
							<name>methodversion</name>
							<placement>a</placement>
							<head>版本</head>
						</tag>
						<tag>
							<name>date</name>
							<placement>a</placement>
							<head>日期</head>
						</tag>
						<tag>
							<name>status</name>
							<placement>a</placement>
							<head>状态</head>
						</tag>
						<tag>
							<name>version</name>
							<placement>a</placement>
							<head>版本</head>
						</tag>
						<tag>
							<name>discription</name>
							<placement>a</placement>
							<head>描述</head>
						</tag>
						<tag>
							<name>return</name>
							<placement>a</placement>
							<head>返回</head>
						</tag>
						<tag>
							<name>datetime</name>
							<placement>a</placement>
							<head>时间</head>
						</tag>
						<tag>
							<name>Date</name>
							<placement>a</placement>
							<head>日期</head>
						</tag>
					</tags>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.build.locales>zh_CN</project.build.locales>
		<junit.version>4.11</junit.version>
		<log4j2.version>2.6.2</log4j2.version>
		<spring.version>4.2.3.RELEASE</spring.version>
		<cglib.version>3.1</cglib.version>
		<hibernate.validator.version>5.1.1.Final</hibernate.validator.version>
		<dev.component.version>0.0.5-SNAPSHOT</dev.component.version>
	</properties>
	<dependencies>

		<!-- spring start -->
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-core</artifactId>
			<version>${spring.version}</version>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-context-support</artifactId>
			<version>${spring.version}</version>
		</dependency>

		<!-- spring end -->
		<!-- log4j2 start -->
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.7.21</version>

		</dependency>
		<dependency>
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-core</artifactId>
			<version>${log4j2.version}</version>
		</dependency>
		<dependency>
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-api</artifactId>
			<version>${log4j2.version}</version>
		</dependency>
		<dependency>
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-slf4j-impl</artifactId>
			<version>${log4j2.version}</version>
		</dependency>
		<!-- log4j2 end -->
		<dependency>
			<groupId>commons-net</groupId>
			<artifactId>commons-net</artifactId>
			<version>3.3</version>
		</dependency>
		<dependency>
			<groupId>commons-collections</groupId>
			<artifactId>commons-collections</artifactId>
			<version>3.2.1</version>
		</dependency>
		<dependency>
			<groupId>commons-lang</groupId>
			<artifactId>commons-lang</artifactId>
			<version>2.6</version>
		</dependency>
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
			<version>2.2</version>
		</dependency>
		<!-- start cglib -->
		<dependency>
			<groupId>cglib</groupId>
			<artifactId>cglib-nodep</artifactId>
			<version>${cglib.version}</version>
		</dependency>
		<!-- end cglib -->
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-lang3</artifactId>
			<version>3.6</version>
		</dependency>
		
		<dependency>
			<groupId>com.alibaba</groupId>
			<artifactId>fastjson</artifactId>
			<version>1.2.21</version>
		</dependency>

	</dependencies>
	<repositories>
		<repository>
			<id>zkjd-nexus</id>
			<url>http://nexus.tomsnail.cn/repository/maven-public/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>
	<reporting>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>findbugs-maven-plugin</artifactId>
				<version>3.0.0</version>
				<configuration>
					<!-- <configLocation>${basedir}/springside-findbugs.xml</configLocation> -->
					<threshold>High</threshold>
					<effort>Default</effort>
					<findbugsXmlOutput>true</findbugsXmlOutput>
					<!-- findbugs xml输出路径 -->
					<findbugsXmlOutputDirectory>target/site</findbugsXmlOutputDirectory>
				</configuration>
			</plugin>
		</plugins>
	</reporting>
	<distributionManagement>
		<repository>
			<id>tomsnail-releases</id>
			<name>Nexus Release Repository</name>
			<url>http://nexus.tomsnail.cn/repository/maven-releases/</url>
		</repository>
		<snapshotRepository>
			<id>tomsnail-snapshots</id>
			<name>Nexus Snapshot Repository</name>
			<url>http://nexus.tomsnail.cn/repository/maven-snapshots/</url>
		</snapshotRepository>
	</distributionManagement>
	<modules>
		<module>dev-web</module>
		<module>dev-jms</module>
		<module>dev-mybatis</module>
		<module>dev-cache</module>
		<module>dev-log</module>
		<module>dev-datasource</module>
		<module>dev-framework</module>
		<module>dev-redis</module>
		<module>dev-starter</module>
		<module>dev-lucene</module>
		<module>dev-quartz</module>
		<module>dev-util</module>
		<module>dev-validator</module>
		<module>dev-task</module>
		<module>dev-config</module>
		<module>dev-pilot</module>
		<module>dev-mongodb</module>
		<module>dev-zkclient</module>
		<module>dev-security</module>
		<module>dev-security-limit</module>
		<module>dev-interface</module>
		<module>dev-lock</module>
		<module>dev-uuid</module>
		<module>dev-host</module>
		<module>dev-pdf</module>
		<module>dev-batch-insert</module>
		<module>dev-obj-sql</module>
		<module>dev-hot-load</module>
		<module>dev-http-client</module>
		<module>dev-interface-util</module>
		<module>dev-gen</module>
		<module>dev-http</module>
		<module>dev-file</module>
		<module>dev-dubbo-parent</module>
		<module>dev-http-rest/dev-http-rest-parent</module>
		<module>dev-unit-test</module>
		<module>dev-reflect</module>
		<module>dev-dao-plugins</module>
		<module>dev-token</module>
		<module>dev-authority</module>
		<module>dev-ehcache</module>
		<module>dev-rap</module>
		<module>dev-j2cache</module>
		<module>dev-fastdfs</module>
		<module>dev-rabbitmq</module>
		<module>dev-ocr</module>
		<module>dev-test</module>
		<module>dev-all</module>
		<module>dev-aliyun-canal</module>
	</modules>
</project>