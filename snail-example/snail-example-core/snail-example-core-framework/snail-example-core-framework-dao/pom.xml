<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>cn.tomsnail.snail</groupId>
		<artifactId>snail-example-core-framework</artifactId>
		<version>${revision}</version>
	</parent>
	<artifactId>snail-example-core-framework-dao</artifactId>

	<packaging>jar</packaging>

	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<includes>
					<include>**/*.properties</include>
					<include>log4j2.xml</include>
				</includes>
				<filtering>true</filtering>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<includes>
					<include>**/*.properties</include>
					<include>**/spring-*</include>
					<include>**/*.xml</include>
					<include>*.xml</include>
					<include>**/data-source/*.xml</include>
				</includes>
			</resource>
			<resource>
				<directory>src/main/java</directory>
				<includes>
					<include>**/*.xml</include>
				</includes>
			</resource>
		</resources>
	</build>
	<dependencies>
		<dependency>
			<groupId>cn.tomsnail.snail</groupId>
			<artifactId>snail-core-framework-dubbo</artifactId>
			<version>${revision}</version>
		</dependency>
		<dependency>
			<groupId>cn.tomsnail.snail</groupId>
			<artifactId>snail-core-framework-dao</artifactId>
			<version>${revision}</version>
		</dependency>
	</dependencies>
	<profiles>
		<profile>
			<id>localhost</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<build>
				<filters>
					<filter>src/test/resources/config-localhost.properties</filter>
				</filters>
			</build>
		</profile>
		<profile>
			<id>ontest</id>
			<activation>
			</activation>
			<build>
				<filters>
					<filter>src/test/resources/config-ontest.properties</filter>
				</filters>
			</build>
		</profile>
		<profile>
			<id>online</id>
			<activation>
			</activation>
			<build>
				<filters>
					<filter>src/test/resources/config-online.properties</filter>
				</filters>
			</build>
		</profile>
	</profiles>
</project>